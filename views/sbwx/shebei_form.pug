extends left

block content
  div.panel.panel-primary
    div.panel-heading
      h3.panel-title #{title}
    
  form(method='POST' action='')
    div.form-group
      label(for='name') 设备名称:
      input(type='text'  name='name' value=(undefined===shebei ? '' : shebei.name))
    div.form-group
      label(for='description') 备注:
      input.form-control(type='text'  name='description' value=(undefined===shebei ? '' : shebei.description))   
    button.btn.btn-primary(type='submit') 保存    
	
  script(src='/javascripts/nav.js')