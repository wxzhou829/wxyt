extends left

block content
  div.panel.panel-primary
    div.panel-heading
      h3.panel-title #{title}
    
  form(method='POST' action='')
    div.form-group
      label(for='name') 名称:
      input.form-control(type='text'  name='name' value=(undefined===provider ? '' : provider.name))
    div.form-group
      label(for='addr') 地址:
      input.form-control(type='text'  name='addr' value=(undefined===provider ? '' : provider.address))
    div.form-group
      label(for='contact') 联系人和电话:
      input.form-control(type='text'  name='contact' value=(undefined===provider ? '' : provider.contact))
    div.form-group
      label(for='scope') 经营范围:
      input.form-control(type='text'  name='scope' value=(undefined===provider ? '' : provider.scope))
    button.btn.btn-primary(type='submit') 保存    

	
  script(src='/javascripts/nav2.js')